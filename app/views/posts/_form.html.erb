<div class="container pt-5">
  <div class="row justify-content-center">
    <div class="col-12">
      <%= form_for @post, multipart: true, local: true, data: { turbo: false } do |f| %>
        <div class="card">
          <div class="card-body">
            <div class="row">
              <div class="col-6">
                <div class="mb-3">
                  <%= f.label :title, class: "form-label" %>
                  <%= f.text_field :title,
                                   class: "form-control",
                                   required: true,
                                   minlength: 2,
                                   maxlength: 500,
                                   placeholder: "Post Title"
                  %>
                </div>
              </div>
              <div class="col-6">
                <div class="mb-3">
                  <%= f.label :author, class: "form-label" %>
                  <%= f.text_field :author,
                                   class: "form-control",
                                   required: true,
                                   minlength: 2,
                                   maxlength: 50,
                                   placeholder: "Name"
                  %>
                </div>
              </div>
            </div>
            <div class="row">
              <div class="col-12">
                <div class="mb-3">
                  <%= f.label :picture, class: "form-label" %>
                  <%= f.file_field :picture, class: "form-control", accept: "image/png, image/jpeg, image/jpg", required: !@post.persisted? %>
                </div>
              </div>
            </div>
            <div class="row">
              <div class="col-12">
                <div class="mb-3">
                  <%= f.label :content, class: "form-label" %>
                  <%= f.text_area :content, class: "form-control", rows: 5, required: true, minlength: 50 %>
                </div>
              </div>
            </div>
          </div>
          <div class="card-footer text-end">
            <button class="btn btn-success"><i class="bi bi-save me-2"></i><%= t("common.save") %></button>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>